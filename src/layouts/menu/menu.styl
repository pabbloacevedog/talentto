@import '../../css/quasar.variables.styl'


.q-item__section--side .q-icon
  font-size: 18px !important

.espacio-derecho-menu
	padding-right: 1%;

.buscador
	width: 250px;

.color-container
	background-color: $secondary;

.color-container-mobile
	background-color: $primary;

.q-field__label
	color: $text !important;
.q-drawer__content
	background: #000000bf !important;
	background: rgba(10,10,10,0.78);
	-webkit-backdrop-filter: blur(8.5px);
	backdrop-filter: blur(8.5px);


.nombre-menu
	background: #343640 !important;
	color: #fff;
	padding: 0px 0px 0px 15px;
	border-radius: 20px;

.n_usuario
	font-family: comfortaa_l
	font-size: 15px;

.menu_list
	padding-top: 50px;
	color: $text;
	font-family: comfortaa_l;

.menu_item
	padding: 5px;

.q-item--active {
	color: $accent;
	background: #20222a !important;
}
.titulo_bar
	color: $text;
	font-size: 1.2vw;
	font-family: comfortaa_l;

.change_color {
	background: rgba( 0, 0, 0, 0.65 );
	backdrop-filter: blur( 8.5px );
	-webkit-backdrop-filter: blur( 8.5px );
}
.q-drawer {
	background: #fff0;
}
